<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasculaInterface.ViewModels"
             x:Class="BasculaInterface.Views.PendingWeightsView"
             Title="Pedidos Pendientes">
    <ContentPage.BindingContext>
        <vm:PendingWeightsViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding PendingWeights}" Margin="20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                       Margin="0,0,0,15"
                       BackgroundColor="#F7F7F7"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="#E0E0E0">

                        <Grid ColumnDefinitions="*,*">

                            <VerticalStackLayout Spacing="4" Grid.Column="0">
                                
                                <Label Text="{Binding Partner.RazonSocial}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#222" />

                                <Label Text="{Binding WeightEntry.VehiclePlate}"
                                   FontSize="14"
                                   TextColor="#666" />
                                
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Spacing="4" Grid.Column="1">
                                
                                <Label Text="{Binding WeightEntry.TareWeight, StringFormat='Tara: {0}'}"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    TextColor="#222" 
                                    HorizontalTextAlignment="End"/>

                                <Label Text="{Binding HistoryText}"
                                    FontSize="16"
                                    TextColor="DarkOrange" 
                                    HorizontalTextAlignment="End"/>
                                
                            </VerticalStackLayout>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>